@model List<HuellitasPaginaWEB.Models.Perrito>

<div class="container mt-5">
    <h2 class="text-center mb-4">Perritos en Adopción</h2>
    
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var perrito in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrEmpty(perrito.FotoUrl))
                    {
                        <img src="@perrito.FotoUrl" class="card-img-top img-fluid" alt="@perrito.Nombre" style="height: 250px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 250px;">
                            <i class="fas fa-paw fa-5x text-secondary"></i>
                        </div>
                    }
                    
                    <div class="card-body">
                        <h5 class="card-title">@perrito.Nombre</h5>
                        
                        <div class="d-flex align-items-center mb-2">
                            <span class="badge @(perrito.Estado == "Disponible" ? "bg-success" : "bg-warning text-dark")">
                                @perrito.Estado
                            </span>
                        </div>
                        
                        <p class="card-text text-muted">@perrito.Descripcion</p>
                    </div>
                    
                    <div class="card-footer bg-transparent">
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">@perrito.FechaRegistro</small>
                            <a asp-controller="Perritos" asp-action="Detalles" asp-route-id="@perrito.Id" 
                               class="btn btn-outline-primary btn-sm">
                                Ver más <i class="fas fa-chevron-right ms-1"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

